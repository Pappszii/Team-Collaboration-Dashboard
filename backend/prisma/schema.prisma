datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Team {
  id        Int          @id @default(autoincrement())
  name      String
  members   TeamMember[]
  projects  Project[]
}

model User {
  id        Int          @id @default(autoincrement())
  name      String
  role      String
  teams     TeamMember[]
}

model TeamMember {
  id        Int      @id @default(autoincrement())
  team      Team     @relation(fields: [teamId], references: [id])
  teamId    Int
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  roleInTeam String? // optional: ADMIN, MEMBER
  joinedAt  DateTime @default(now())

  @@unique([teamId, userId]) // prevents duplicates
}

model Project {
  id     Int    @id @default(autoincrement())
  title  String
  team   Team?  @relation(fields: [teamId], references: [id])
  teamId Int?
}
