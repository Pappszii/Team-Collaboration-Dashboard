datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  role      String   // "ADMIN" | "MEMBER"
  teams     TeamMember[]
  createdAt DateTime @default(now())
}

model Team {
  id        Int      @id @default(autoincrement())
  name      String
  members   TeamMember[]
  projects  Project[]
  createdAt DateTime @default(now())
}

model TeamMember {
  id     Int  @id @default(autoincrement())
  team   Team @relation(fields: [teamId], references: [id])
  teamId Int
  user   User @relation(fields: [userId], references: [id])
  userId Int
}

model Project {
  id        Int      @id @default(autoincrement())
  title     String
  team      Team?    @relation(fields: [teamId], references: [id])
  teamId    Int?
  createdAt DateTime @default(now())
}
